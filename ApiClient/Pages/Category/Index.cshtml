@page
@model ApiClient.Pages.Category.IndexModel
@{
    ViewData["Title"] = "Category Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-tags text-primary me-2"></i>Category Management
        </h2>
        <p class="text-muted mb-0">Organize and manage news categories</p>
    </div>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">
        <i class="fas fa-plus me-2"></i>Create Category
    </button>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
    </div>
}

@if (TempData["DebugInfo"] != null)
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i><strong>Debug:</strong> @TempData["DebugInfo"]
    </div>
}

<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="fas fa-search me-2"></i>Search Categories
        </h5>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-8">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fas fa-search"></i>
                    </span>
                    <input name="q" class="form-control" placeholder="Search categories by name or description..." value="@Model.SearchQuery" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="d-flex gap-2">
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-search me-2"></i>Search
                    </button>
                    @if (!string.IsNullOrEmpty(Model.SearchQuery))
                    {
                        <a href="/Category" class="btn btn-outline-danger">
                            <i class="fas fa-times me-2"></i>Clear
                        </a>
                    }
                </div>
            </div>
        </form>
        @if (!string.IsNullOrEmpty(Model.SearchQuery))
        {
            <div class="mt-3">
                <small class="text-info">
                    <i class="fas fa-info-circle me-1"></i>
                    Showing results for: <strong>"@Model.SearchQuery"</strong> 
                    (@Model.Categories.Count categories found)
                </small>
            </div>
        }
        <small class="text-muted">
            <i class="fas fa-lightbulb me-1"></i>
            Search in category name and description using OData filters.
        </small>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="fas fa-list me-2"></i>Categories
        </h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th><i class="fas fa-tag me-1"></i>Name</th>
                        <th><i class="fas fa-align-left me-1"></i>Description</th>
                        <th><i class="fas fa-toggle-on me-1"></i>Status</th>
                        <th class="text-end"><i class="fas fa-cog me-1"></i>Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var c in Model.Categories)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="category-icon bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2">
                                    <i class="fas fa-tag"></i>
                                </div>
                                <span class="fw-medium">@c.CategoryName</span>
                            </div>
                        </td>
                        <td>@c.CategoryDesciption</td>
                        <td>
                            @if (c.IsActive == true)
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-check me-1"></i>Active
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning">
                                    <i class="fas fa-pause me-1"></i>Inactive
                                </span>
                            }
                        </td>
                        <td class="text-end">
                            <div class="btn-group" role="group">
                                <button class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#editModal-@c.CategoryId" title="Edit Category">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@c.CategoryId" title="Delete Category">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (Model.Categories.Count == 0 && !string.IsNullOrEmpty(Model.SearchQuery))
{
    <div class="text-center py-5">
        <div class="text-muted">
            <i class="fas fa-search fa-4x mb-3"></i>
            <h4>No categories found</h4>
            <p>No categories match your search term "<strong>@Model.SearchQuery</strong>"</p>
            <a href="/Category" class="btn btn-primary">
                <i class="fas fa-list me-2"></i>View All Categories
            </a>
        </div>
    </div>
}

<!-- Create Category Modal -->
<div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-plus me-2"></i>Create New Category
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-page-handler="Create">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-tag me-1"></i>Category Name
                                </label>
                                <input class="form-control" name="CategoryName" placeholder="Enter category name" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-toggle-on me-1"></i>Status
                                </label>
                                <div class="form-check form-switch">
                                    <input type="hidden" name="IsActive" value="false" />
                                    <input class="form-check-input" type="checkbox" name="IsActive" value="true" checked />
                                    <label class="form-check-label">Active</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">
                            <i class="fas fa-align-left me-1"></i>Description
                        </label>
                        <textarea class="form-control" name="CategoryDesciption" rows="3" placeholder="Enter category description"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal" type="button">
                        <i class="fas fa-times me-2"></i>Cancel
                    </button>
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-save me-2"></i>Create Category
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Modals -->
@foreach (var c in Model.Categories)
{
    <div class="modal fade" id="editModal-@c.CategoryId" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-edit me-2"></i>Edit Category
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form method="post" asp-page-handler="Edit">
                    <div class="modal-body">
                        <input type="hidden" name="CategoryId" value="@c.CategoryId" />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-semibold">
                                        <i class="fas fa-tag me-1"></i>Category Name
                                    </label>
                                    <input class="form-control" name="CategoryName" value="@c.CategoryName" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-semibold">
                                        <i class="fas fa-toggle-on me-1"></i>Status
                                    </label>
                                    <div class="form-check form-switch">
                                        <input type="hidden" name="IsActive" value="false" />
                                        <input class="form-check-input" type="checkbox" name="IsActive" value="true" @(c.IsActive == true ? "checked" : "") />
                                        <label class="form-check-label">Active</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">
                                <i class="fas fa-align-left me-1"></i>Description
                            </label>
                            <textarea class="form-control" name="CategoryDesciption" rows="3">@c.CategoryDesciption</textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" data-bs-dismiss="modal" type="button">
                            <i class="fas fa-times me-2"></i>Cancel
                        </button>
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-save me-2"></i>Update Category
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

<!-- Delete Modals -->
@foreach (var c in Model.Categories)
{
    <div class="modal fade" id="deleteModal-@c.CategoryId" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-trash me-2"></i>Delete Category
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form method="post" asp-page-handler="Delete">
                    <div class="modal-body">
                        <input type="hidden" name="categoryId" value="@c.CategoryId" />
                        <div class="text-center mb-3">
                            <i class="fas fa-exclamation-triangle fa-3x text-warning"></i>
                        </div>
                        <p class="text-center">Are you sure you want to delete the category <strong>"@c.CategoryName"</strong>?</p>
                        <div class="alert alert-warning">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Warning:</strong> This action cannot be undone and may affect associated news articles.
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" data-bs-dismiss="modal" type="button">
                            <i class="fas fa-times me-2"></i>Cancel
                        </button>
                        <button class="btn btn-danger" type="submit">
                            <i class="fas fa-trash me-2"></i>Delete Category
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

<style>
.category-icon {
    width: 32px;
    height: 32px;
    font-size: 14px;
}
</style>


