@page
@model ApiClient.Pages.NewsArticle.IndexModel
@{
    ViewData["Title"] = "News Article Management";
}

@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    var userRole = HttpContextAccessor.HttpContext?.Session.GetString("UserRole");
    var isLoggedIn = !string.IsNullOrEmpty(userRole);
}

@if (!isLoggedIn)
{
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5">
                    <div class="card-body text-center">
                        <div class="mb-4">
                            <i class="fas fa-ban fa-4x text-danger"></i>
                        </div>
                        <h2 class="text-danger mb-3">You're Denied!</h2>
                        <p class="text-muted mb-4">You need to be logged in to access this page.</p>
                        <div class="d-flex justify-content-center gap-2">
                            <a href="/" class="btn btn-primary">
                                <i class="fas fa-home me-2"></i>Go Home
                            </a>
                            <a href="/Profile" class="btn btn-outline-secondary">
                                <i class="fas fa-user me-2"></i>View Profile
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-newspaper text-primary me-2"></i>News Article Management
        </h2>
        <p class="text-muted mb-0">View and manage news articles</p>
    </div>
    @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
    @{
        var role = HttpContextAccessor.HttpContext?.Session.GetString("UserRole");
        var isAdmin = role == "1";
        var isStaff = role == "2";
        var canCreate = !isAdmin && (isStaff || role == "0"); // Allow staff and regular users, but not admins
    }
    @if (canCreate)
    {
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">
            <i class="fas fa-plus me-2"></i>Create Article
        </button>
    }
</div>

@if (!string.IsNullOrEmpty(TempData["SuccessMessage"] as string))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!string.IsNullOrEmpty(TempData["ErrorMessage"] as string))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="fas fa-search me-2"></i>Search Articles
        </h5>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-8">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fas fa-search"></i>
                    </span>
                    <input name="q" class="form-control" placeholder="Search articles by title..." value="@Model.SearchQuery" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="d-flex gap-2">
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-search me-2"></i>Search
                    </button>
                    @if (!string.IsNullOrEmpty(Model.SearchQuery))
                    {
                        <a href="/NewsArticle" class="btn btn-outline-danger">
                            <i class="fas fa-times me-2"></i>Clear
                        </a>
                    }
                </div>
            </div>
        </form>
        @if (!string.IsNullOrEmpty(Model.SearchQuery))
        {
            <div class="mt-3">
                <small class="text-info">
                    <i class="fas fa-info-circle me-1"></i>
                    Showing results for: <strong>"@Model.SearchQuery"</strong> 
                    (@Model.Articles.Count articles found)
                </small>
            </div>
        }
        <small class="text-muted">
            <i class="fas fa-lightbulb me-1"></i>
            Search in article titles using OData filters.
        </small>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="fas fa-list me-2"></i>News Articles
        </h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th><i class="fas fa-hashtag me-1"></i>ID</th>
                        <th>
                            <i class="fas fa-heading me-1"></i>Title
                            <a class="btn btn-link btn-sm p-0 ms-1" href="/NewsArticle?sort=title&dir=@(Model.SortField=="title" && Model.SortDir=="asc"?"desc":"asc")" title="Sort by Title">
                                <i class="fas fa-sort"></i>
                            </a>
                        </th>
                        <th><i class="fas fa-newspaper me-1"></i>Headline</th>
                        <th>
                            <i class="fas fa-calendar me-1"></i>Created
                            <a class="btn btn-link btn-sm p-0 ms-1" href="/NewsArticle?sort=created&dir=@(Model.SortField=="created" && Model.SortDir=="asc"?"desc":"asc")" title="Sort by Created Date">
                                <i class="fas fa-sort"></i>
                            </a>
                        </th>
                        <th>
                            <i class="fas fa-folder me-1"></i>Category
                            <a class="btn btn-link btn-sm p-0 ms-1" href="/NewsArticle?sort=category&dir=@(Model.SortField=="category" && Model.SortDir=="asc"?"desc":"asc")" title="Sort by Category">
                                <i class="fas fa-sort"></i>
                            </a>
                        </th>
                        <th><i class="fas fa-user me-1"></i>Author</th>
                        <th><i class="fas fa-toggle-on me-1"></i>Status</th>
                        <th class="text-end"><i class="fas fa-cog me-1"></i>Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var a in Model.Articles)
                {
                    <tr>
                        <td><span class="badge bg-secondary">@a.NewsArticleId</span></td>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="me-2">
                                    <i class="fas fa-file-alt text-primary"></i>
                                </div>
                                <span class="fw-medium">@a.NewsTitle</span>
                            </div>
                        </td>
                        <td>@a.Headline</td>
                        <td>
                            <div class="d-flex align-items-center">
                                <i class="fas fa-clock text-muted me-1"></i>
                                <span>@a.CreatedDate?.ToString("MMM dd, yyyy HH:mm")</span>
                            </div>
                        </td>
                        <td>@(a.CategoryName ?? "-")</td>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="avatar-sm bg-info text-white rounded-circle d-flex align-items-center justify-content-center me-2">
                                    <i class="fas fa-user"></i>
                                </div>
                                <span>@(a.AuthorName ?? "Unknown")</span>
                            </div>
                        </td>
                        <td>
                            @if (a.NewsStatus == true)
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-check me-1"></i>Active
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning">
                                    <i class="fas fa-pause me-1"></i>Inactive
                                </span>
                            }
                        </td>
                        <td class="text-end">
                            @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
                            @{
                                var tableUserRole = HttpContextAccessor.HttpContext?.Session.GetString("UserRole");
                                var tableUserId = HttpContextAccessor.HttpContext?.Session.GetString("UserId");
                                var tableUserIsAdmin = tableUserRole == "1";
                                var tableUserIsStaff = tableUserRole == "2";
                                var isOwner = !string.IsNullOrEmpty(tableUserId) && short.TryParse(tableUserId, out var uid) && a.CreatedById == uid;
                                var canEditDelete = isOwner; // Only owners can edit/delete their own articles
                            }
                            <div class="btn-group" role="group">
                                <a href="/NewsArticle/Details/@a.NewsArticleId" class="btn btn-sm btn-outline-primary" title="View Details">
                                    <i class="fas fa-eye"></i>
                                </a>
                                @if (canEditDelete)
                                {
                                    <button class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#editModal-@a.NewsArticleId" title="Edit Article">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@a.NewsArticleId" title="Delete Article">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                }
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (Model.Articles.Count == 0 && !string.IsNullOrEmpty(Model.SearchQuery))
{
    <div class="text-center py-5">
        <div class="text-muted">
            <i class="fas fa-search fa-4x mb-3"></i>
            <h4>No articles found</h4>
            <p>No articles match your search term "<strong>@Model.SearchQuery</strong>"</p>
            <a href="/NewsArticle" class="btn btn-primary">
                <i class="fas fa-list me-2"></i>View All Articles
            </a>
        </div>
    </div>
}

<!-- Create Article Modal -->
@if (!isAdmin)
{
<div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-plus me-2"></i>Create New Article
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-page-handler="Create">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-heading me-1"></i>Article Title
                                </label>
                                <input class="form-control" name="NewsTitle" placeholder="Enter article title" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-newspaper me-1"></i>Headline
                                </label>
                                <input class="form-control" name="Headline" placeholder="Enter headline" required />
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">
                            <i class="fas fa-align-left me-1"></i>Content
                        </label>
                        <textarea class="form-control" name="NewsContent" rows="6" placeholder="Enter article content" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">
                            <i class="fas fa-link me-1"></i>Source
                        </label>
                        <input class="form-control" name="NewsSource" placeholder="Enter news source URL" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">
                            <i class="fas fa-folder me-1"></i>Category
                        </label>
                        <select class="form-select" name="CategoryId">
                            <option value="">-- Select category (optional) --</option>
                            @foreach (var c in Model.Categories)
                            {
                                <option value="@c.CategoryId">@c.CategoryName</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal" type="button">
                        <i class="fas fa-times me-2"></i>Cancel
                    </button>
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-save me-2"></i>Create Article
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
}

<!-- Edit Modals -->
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@foreach (var a in Model.Articles)
{
    var editRole = HttpContextAccessor.HttpContext?.Session.GetString("UserRole");
    var editUserId = HttpContextAccessor.HttpContext?.Session.GetString("UserId");
    var editIsAdmin = editRole == "1";
    var editIsStaff = editRole == "2";
    var editIsOwner = !string.IsNullOrEmpty(editUserId) && short.TryParse(editUserId, out var editUid) && a.CreatedById == editUid;
    var editCanEditDelete = editIsOwner; // Only owners can edit/delete their own articles
    
    @if (editCanEditDelete)
    {
        <div class="modal fade" id="editModal-@a.NewsArticleId" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">
                            <i class="fas fa-edit me-2"></i>Edit Article
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form method="post" asp-page-handler="Edit">
                        <div class="modal-body">
                            <input type="hidden" name="NewsArticleId" value="@a.NewsArticleId" />
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-semibold">
                                            <i class="fas fa-heading me-1"></i>Article Title
                                        </label>
                                        <input class="form-control" name="NewsTitle" value="@a.NewsTitle" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-semibold">
                                            <i class="fas fa-newspaper me-1"></i>Headline
                                        </label>
                                        <input class="form-control" name="Headline" value="@a.Headline" required />
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-align-left me-1"></i>Content
                                </label>
                                <textarea class="form-control" name="NewsContent" rows="6" required>@a.NewsContent</textarea>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-link me-1"></i>Source
                                </label>
                                <input class="form-control" name="NewsSource" value="@a.NewsSource" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-semibold">
                                    <i class="fas a-folder me-1"></i>Category
                                </label>
                                <select class="form-select" name="CategoryId">
                                    <option value="">-- Select category (optional) --</option>
                                        @foreach (var c in Model.Categories)
                                        {
                                            if (a.CategoryId == c.CategoryId)
                                            {
                                                <option value="@c.CategoryId" selected="selected">@c.CategoryName</option>
                                            }
                                            else
                                            {
                                                <option value="@c.CategoryId">@c.CategoryName</option>
                                            }
                                        }
                                </select>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-secondary" data-bs-dismiss="modal" type="button">
                                <i class="fas fa-times me-2"></i>Cancel
                            </button>
                            <button class="btn btn-primary" type="submit">
                                <i class="fas fa-save me-2"></i>Update Article
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
}

<!-- Delete Modals -->
@foreach (var a in Model.Articles)
{
    var deleteRole = HttpContextAccessor.HttpContext?.Session.GetString("UserRole");
    var deleteUserId = HttpContextAccessor.HttpContext?.Session.GetString("UserId");
    var deleteIsAdmin = deleteRole == "1";
    var deleteIsStaff = deleteRole == "2";
    var deleteIsOwner = !string.IsNullOrEmpty(deleteUserId) && short.TryParse(deleteUserId, out var deleteUid) && a.CreatedById == deleteUid;
    var deleteCanEditDelete = deleteIsOwner; // Only owners can edit/delete their own articles
    
    @if (deleteCanEditDelete)
    {
        <div class="modal fade" id="deleteModal-@a.NewsArticleId" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">
                            <i class="fas fa-trash me-2"></i>Delete Article
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form method="post" asp-page-handler="Delete">
                        <div class="modal-body">
                            <input type="hidden" name="newsArticleId" value="@a.NewsArticleId" />
                            <div class="text-center mb-3">
                                <i class="fas fa-exclamation-triangle fa-3x text-warning"></i>
                            </div>
                            <p class="text-center">Are you sure you want to delete the article <strong>"@a.NewsTitle"</strong>?</p>
                            <div class="alert alert-warning">
                                <i class="fas fa-info-circle me-2"></i>
                                <strong>Warning:</strong> This action cannot be undone.
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-secondary" data-bs-dismiss="modal" type="button">
                                <i class="fas fa-times me-2"></i>Cancel
                            </button>
                            <button class="btn btn-danger" type="submit">
                                <i class="fas fa-trash me-2"></i>Delete Article
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
}

<style>
.avatar-sm {
    width: 32px;
    height: 32px;
    font-size: 14px;
}
</style>
}


