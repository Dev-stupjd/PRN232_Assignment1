@page
@model ApiClient.Pages.NewsArticle.HistoryModel
@{
    ViewData["Title"] = "My News History";
}

<h2>My News History</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Headline</th>
            <th>Created</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var a in Model.Articles)
    {
        <tr>
            <td>@a.NewsArticleId</td>
            <td>@a.NewsTitle</td>
            <td>@a.Headline</td>
            <td>@a.CreatedDate?.ToString("yyyy-MM-dd HH:mm")</td>
        </tr>
    }
    </tbody>
</table>


